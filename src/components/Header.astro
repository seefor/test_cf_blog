---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 bg-bg/80 dark:bg-bg-dark/80 backdrop-blur-sm border-b border-border dark:border-border-dark">
  <nav class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-text dark:text-text-dark hover:text-primary dark:hover:text-primary-dark transition-colors">
          Your Blog
        </a>
      </div>
      
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="/" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/blog" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Blog
          </a>
          <a href="/about" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium transition-colors">
            About
          </a>
          <a href="/contact" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Contact
          </a>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <ThemeToggle />
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button type="button" class="mobile-menu-button text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark focus:outline-none focus:text-primary dark:focus:text-primary-dark" aria-label="Toggle menu">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-border dark:border-border-dark">
        <a href="/" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Home
        </a>
        <a href="/blog" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Blog
        </a>
        <a href="/about" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark block px-3 py-2 rounded-md text-base font-medium transition-colors">
          About
        </a>
        <a href="/contact" class="text-text-secondary dark:text-text-secondary-dark hover:text-primary dark:hover:text-primary-dark block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('.mobile-menu');
    
    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  });
</script>
